<idea-plugin>
    <id>dev.jordond.compose-resources-kit</id>
    <name>Compose Resources Kit</name>
    <vendor url="https://jordond.dev">jordond</vendor>

    <description><![CDATA[
        Automatically regenerates Compose Multiplatform resource accessors when
        files in composeResources directories are modified.<br><br>
        Eliminates the need to manually run <code>generateResourceAccessorsForCommonMain</code>
        after editing strings.xml, drawables, or other resource files.<br><br>
        Supports custom resource directories configured via
        <code>compose.resources { customDirectory(...) }</code>.<br><br>
        The plugin only activates for projects using the <code>org.jetbrains.compose</code> Gradle plugin.
    ]]></description>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.gradle</depends>

    <extensions defaultExtensionNs="com.intellij">
        <projectConfigurable
            id="dev.jordond.composeresourceskit.settings"
            parentId="tools"
            displayName="Compose Resources Kit"
            provider="dev.jordond.composeresourceskit.settings.ComposeResourcesConfigurableProvider"/>

        <projectService
            serviceImplementation="dev.jordond.composeresourceskit.settings.ComposeResourcesSettings"/>

        <projectService
            serviceImplementation="dev.jordond.composeresourceskit.service.ComposeDetector"/>

        <projectService
            serviceImplementation="dev.jordond.composeresourceskit.service.ComposeResourcesService"/>

        <projectService
            serviceImplementation="dev.jordond.composeresourceskit.service.PluginLogger"/>

        <statusBarWidgetFactory
            id="ComposeResourcesWidget"
            implementation="dev.jordond.composeresourceskit.ui.ComposeResourcesStatusBarWidgetFactory"/>

        <notificationGroup id="Compose Resources Kit" displayType="BALLOON"/>
    </extensions>

    <applicationListeners>
        <listener
            class="dev.jordond.composeresourceskit.listener.ComposeResourcesFileListener"
            topic="com.intellij.openapi.vfs.newvfs.BulkFileListener"/>
    </applicationListeners>
</idea-plugin>
