<idea-plugin>
    <id>dev.jordond.compose-resources-kit</id>
    <name>Compose Resources Kit</name>
    <vendor url="https://jordond.dev">jordond</vendor>

    <description><![CDATA[
        <p>A collection of tools for working with Compose Multiplatform resources. It simplifies your development workflow by automating resource accessor generation, resource navigation, and management.</p>

        <h3>Features</h3>
        <ul>
            <li><b>Automatic Resource Accessors</b>: Watches your <code>composeResources</code> directories and automatically runs <code>generateResourceAccessors</code> on file changes.</li>
            <li><b>Unused Resource Detection</b>: Highlights unused XML resources (strings, plurals, etc.) and provides a quick fix to remove them safely.</li>
            <li><b>Resource Navigation</b>: Go to declaration support from Kotlin code to XML definitions and find usages from XML back to Kotlin.</li>
        </ul>

        <p>Configure under <b>Settings &gt; Tools &gt; Compose Resources Kit</b>.</p>
    ]]></description>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.gradle</depends>
    <depends>com.intellij.modules.xml</depends>
    <depends>org.jetbrains.kotlin</depends>

    <extensions defaultExtensionNs="com.intellij">
        <projectConfigurable
            id="dev.jordond.composeresourceskit.settings"
            parentId="tools"
            displayName="Compose Resources Kit"
            provider="dev.jordond.composeresourceskit.settings.ComposeResourcesConfigurableProvider"/>

        <statusBarWidgetFactory
            id="ComposeResourcesWidget"
            implementation="dev.jordond.composeresourceskit.ui.ComposeResourcesStatusBarWidgetFactory"/>

        <notificationGroup id="Compose Resources Kit" displayType="BALLOON"/>

        <postStartupActivity
            implementation="dev.jordond.composeresourceskit.ComposeResourcesStartupActivity"/>

        <gotoDeclarationHandler implementation="dev.jordond.composeresourceskit.ResourceGotoDeclarationHandler"/>

        <localInspection
            language="XML"
            implementationClass="dev.jordond.composeresourceskit.inspection.UnusedComposeResourceInspection"
            displayName="Unused Compose resource"
            groupName="Compose Resources Kit"
            enabledByDefault="true"
            level="WARNING"/>
    </extensions>

    <extensions defaultExtensionNs="org.jetbrains.kotlin">
        <supportsKotlinPluginMode supportsK2="true" supportsK1="true"/>
    </extensions>
</idea-plugin>
